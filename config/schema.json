{
	"$schema": "http://json-schema.org/draft-04/schema#",
	"title": "Config",
	"description": "Config file for benchmark",
	"type": "object",
	"properties": {
		"repetitions": {
			"description": "Number of repetitions",
			"type": "number",
			"minimum": 10
		},
		"testData": {
			"description": "Name of file with test data.",
			"type": "string"
		},
		"benchmark": {
			"type": "object",
			"minProperties": 1,
			"additionalProperties": {
				"type": "object",
				"properties": {
					"converter": {
						"description": "Name of converter class.",
						"type": "string"
					},
					"formats": {
						"description": "Formats such as xml, json,...",
						"type": "object",
						"minProperties": 1,
						"additionalProperties": {
							"type": "object",
							"description": "Concrete format such as xml",
							"properties": {
								"converter": {
									"description": "Name of converter class.",
									"type": "string"
								},
								"libs": {
									"description": "Libraries",
									"type": "array",
									"minItems": 1,
									"items": {
										"type": "object",
										"description": "Concrete library",
										"properties": {
											"name": {
												"description": "Name of lib or function.",
												"type": "string"
											},
											"class": {
												"description": "Fully qualified name of class which implements IUnitBenchmarkTest interface.",
												"type": "string"
											},
											"url": {
												"description": "URL to lib or function web page.",
												"type": "string"
											},
											"version": {
												"description": "Version of lib or function.",
												"type": "string"
											}
										},
										"required": ["name", "class"]
									}

								}
							},
							"required": ["libs"]
						}
					}
				},
				"required": ["formats"]
			}
		}
	},
	"required": ["repetitions", "testData", "benchmark"]
}